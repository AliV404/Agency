@model CreateProjectVM

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Project</h4>
                <form method="post" class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Photo">Photo</label>
                        <input asp-for="Photo" accept="image/*" class="form-control" placeholder="Image">
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId">Category</label>
                        <select asp-items="@(new SelectList(Model.Categories, nameof(Category.Id), nameof(Category.Name)))">
                            <option selected disabled></option>
                            </select>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button asp-action="" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>